@using Microsoft.AspNetCore.Mvc.TagHelpers
@model PaymentGatewayService.Models.ViewModels.PaymentViewModel

<h4>Платежи</h4>
<hr />
<div class="row">
    <div class="col-md-8">
        <form id="paymentForm" asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="mb-3">
                <label asp-for="@Model.PaymentBanks!.Total" class="form-label"></label>
                <input asp-for="@Model.PaymentBanks!.Total" class="form-control" />
                <span asp-validation-for="PaymentBanks!.Total" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <div class="mb-3">
                    @Html.DropDownList("PaymentBanks.Bank",
                        new SelectList(Model.SelectedBank, "Value", "Text"),
                        "-- Выберите банк --",
                        new { @class = "form-select", data_val = "true", data_val_required = "Выберите банк" })
                    <span asp-validation-for="PaymentBanks!.Bank" class="text-danger"></span>
                </div>
            </div>
            <input type="submit" id="submitBtn" value="Отправить" class="btn btn-primary" />

           </form>
    </div>
    
</div>

@section Scripts
{
    @{
        <partial name="_ValidationScriptsPartial"/>
    }

    <script src="~/js/payment.js" type="module"></script>
}